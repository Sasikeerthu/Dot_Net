@{
    Layout = "_Layout";
}

<div class="content-wrapper ">
    <div class="content-header  ">

        <div class="container-fluid">

            <div class="card">


                <div class="card-header ">

                    <h1 class="m-0">Data Report</h1>
                </div>

                <form method="post">
                <div class="datePickers d-flex justify-content-start">
                     <div class="startDate pr-5">
                        Start Date
                        <input name="inputStartDate" type="date" asp-format="{0:dd-MM-yyyy}" required />
                    </div>
                        &nbsp; &nbsp;
                        <div class="endDate  ">
                            End Date
                            <input name="inputEndDate" type="date" asp-format="{0:dd-MM-yyyy}" required />
                        </div>
                        &nbsp; &nbsp;
                        <div > 
                        
                        <button class="btn1 btn1-outline-success "type="submit" >Search</button> 
                        </div>
                 
                    </div>
                </form>
                <table class="table table-striped  table-bordered mt-5" id="dtable">
                    <thead>
                        <tr>
                            <th> Date</th>
                            <th>Enrollment</th>
                            <th>Enrollment Failure </th>
                            <th>Login Attempt </th>
                            <th>Login Success through Direct Voice Authentication</th>
                            <th>Login Success Through AIModel</th>
                            <th>Total Success</th>
                            <th>Login Failed </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vr in Model) // Loop through each Employee object in the model
                        {
                            <tr>
                                <td>@vr.Date</td>
                                <td>@vr.Enrollment</td>
                                <td>@vr.EnrollmentFailure</td>
                                <td>@vr.LoginAttempt</td>
                                <td>@vr.LoginSuccessthroughDirectVoiceAuthentication</td>
                                <td>@vr.LoginSuccessThroughAIModel</td>
                                <td>@vr.TotalSuccess</td>
                                <td>@vr.LoginFailed</td>

                            </tr>
                        }
                    </tbody>
                </table>


            </div><!-- /.row -->

        </div><!-- /.container-fluid -->

    </div>
</div>
<script>
