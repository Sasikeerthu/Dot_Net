@{
    Layout = "_Layout";
}
<div class="content-wrapper">
    <div class="content-header">

        <div class="container-fluid">

            <div class="card ">

                <div class="card-header">

                    <h1 class="m-0">Enrollment Report</h1>

                </div>
                @using (Html.BeginForm("Enrollment", "Home", FormMethod.Post, new { @class = "form" })){
                    <div class="datePickers d-flex flex-row bd-highlight mb-3 mt-3">
                        <div class="startDate">
                            Start Date
                            <input name="inputStartDate" type="date" asp-format="{0:yyyy-MM-dd}" required />
                        </div>
            &nbsp &nbsp<div class="endDate">
                            End Date
                            <input name="inputEndDate" type="date" asp-format="{0:yyyy-MM-dd}" required />
                        </div>
                        &nbsp&nbsp<div>
                            <button formaction="Enrollment">SUBMIT</button>
                        </div>
                    
                    </div>
                    }
               
                <table class="table  table-striped table-bordered mt-3" id="dtable">
                    <thead>
                        <tr>
                            <th> date</th>

                            <th>customerId</th>
                            <th>uniqueId </th>
                            <th>EnrollmentId </th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vr in Model) // Loop through each Employee object in the model
                        {
                            <tr>
                                <td>@vr.date</td>
                                <td>@vr.customerId</td>
                                <td>@vr.uniqueId</td>
                                <td>@vr.EnrollmentId</td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        </div><!-- /.row -->

    </div><!-- /.container-fluid -->

</div>
