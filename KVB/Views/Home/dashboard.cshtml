@{
    Layout = "_Layout";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

<div class="content-wrapper">

    <div class="content-header">

        <div class="container-fluid  mt-5">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1 class="m-0">MIS Dashboard</h1>

                </div><!-- /.col -->



            </div><!-- /.row -->

        </div><!-- /.container-fluid -->

    </div>


    <!-- Preloader -->
    <!-- Navbar -->
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->

    <section class="content">
        <div class="container-fluid">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="row">
                <div class="col">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.Echart</h3>
                            &nbsp; <p style="font-size: 15px;vertical-align: bottom;">Enrollment Success</p>
                        </div>
                        <div class="icon">
                            <i class="glyphicon glyphicon-ok-circle"></i>
                        </div>

                    </div>
                </div>
                <!-- ./col -->
                <div class="col">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@ViewBag.EFchart</h3>
                            &nbsp; <p style="font-size: 15px;vertical-align: bottom;">Enrollment Failure</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>

                    </div>
                </div>
                <!-- ./col -->
                <div class="col">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.Vchart</h3>
                            &nbsp <p style="font-size: 15px;vertical-align: bottom;">Verification Success</p>
                        </div>
                        <div class="icon">
                            <i class="glyphicon glyphicon-ok-circle"></i>
                        </div>

                    </div>
                </div>
                <!-- ./col -->
                <div class="col">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3> @ViewBag.VFchart</h3>

                            &nbsp<p style="font-size: 15px;vertical-align: bottom;">Verification Failure</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>

                    </div>
                </div>
                <div class="col">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@ViewBag.FAchart</h3>
                            &nbsp <p style="font-size: 15px;vertical-align: bottom;">False Acceptance</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-skull-crossbones"></i>
                        </div>

                    </div>
                </div>
                <!-- ./col -->
            </div>
        </div>

    </section>
    <div class="row">
        <div class="col-6 ml-2">
            <div class="card">
                <div class="card-header" >
                    <h3 class="card-title" style="font-size:30px">MIS Report </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body" style="padding-bottom:57px">
                    <table class="table  table-striped table-bordered" id="dtable" style="height: 171px; width: 100%;">
                        <tr scope="col">
                            <th>Serial No</th>
                            <th>Description</th>
                            <th>Count</th>
                        </tr>
                        <tr>
                            <td>1.</td>
                            <td>Total Enrollment</td>
                            <td>@ViewBag.Echart</td>
                        </tr>
                        <tr>
                            <td>2.</td>
                            <td>Verification Success</td>
                            <td>@ViewBag.Vchart</td>
                        </tr>
                        <tr>
                            <td>3.</td>
                            <td>Verification Failed</td>
                            <td>@ViewBag.VFchart</td>
                        </tr>
                        <tr>
                            <td>4.</td>
                            <td>False acceptance</td>
                            <td>@ViewBag.FAchart</td>
                        </tr>
                    </table>

                </div>
            </div>
        </div>

        <div class="col mr-4 ">
            <div class="card" >
                <div class="card-header">
                    <h3 class="card-title"  style="font-size:30px" *@>Bio Metric Chart </h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body" @* style="padding-bottom:50px" *@>
                    <div id="chartContainer" style="height: 230px; width: 100%;" *@></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
         data: [{
                type: "column",
                
                indexLabel: "{y}",
                dataPoints: @Html.Raw(ViewBag.DataPoints)
            }]
        });

        function updateChart() {
            
            chart.render();
        };
        updateChart();

        setInterval(function () { updateChart() }, 2000);

    }
</script>

<script>
    $(document).ready(function () {
        $('#dtable').DataTable();
    });
</script>


